= form_for(@image) do |f|
  - if @image.errors.any?
    #error_explanation
      %h2
        = pluralize(@image.errors.count, "error")
        prohibited this image from being saved:
      %ul
        - @image.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :file_name
    %br/
    = f.text_field :file_name
  .field
    = f.label :extension
    %br/
    = f.text_field :extension
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .actions
    = f.submit
